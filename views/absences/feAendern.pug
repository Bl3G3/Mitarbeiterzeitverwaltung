                    label(for='new_bisdate') Bis
                    input(type='date', name='new_bisdate', value=old_bisdate)
                .pure-control-group
                    label.pure-radio(for='option-one') Krank
                    input#option-one(type='radio', name='new_kat', value='krank')
                .pure-control-group
                    label.pure-radio(for='option-two') Urlaub
                    input#option-two(type='radio', name='new_kat', value='urlaub')
                .pure-control-group
