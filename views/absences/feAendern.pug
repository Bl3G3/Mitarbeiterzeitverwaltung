                    label(for='old_kat') Kategorie
                    input(type='text', name='old_kat', readonly='readonly', value=old_kat)
                .pure-control-group
                    h2 Neue Fehlzeit
                .pure-control-group
                    label(for='new_vondate') Von
                    input(type='date', name='new_vondate', value=old_vondate)
